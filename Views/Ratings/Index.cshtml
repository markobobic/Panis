@model IEnumerable<Panis.Models.Employee>
<br /><br /><br /> <br /><br />

                        
@foreach (var p in Model)
{
    @Html.Partial("_Rating", p)
}
<link href="@Url.Content("~/Content/rating.css")" rel="stylesheet" />
<style>
    .head {
        text-align: center;
        display: block;
    }

        .head h1 {
            font-weight: 200;
            position: relative;
            display:block;
            font-family: Verdana;
            color: #34495E;
        }

            .head h1:before, .head h1:after {
                content: "";
                height: 3px;
                width: 450px;
                background: #141E30;
                display:block;
                position:absolute;
                top: 50%;
            }

            .head h1:before {
                left: 0;
            }

            .head h1:after {
                right: 0;
            }
 
</style>
@section scripts {
    <script src="@Url.Content("~/Scripts/rating.js")"></script>
    <script>
        $(function () {
            $('#myTab a').click(function (e) {
                e.preventDefault();
                $(this).tab('show');
            })

            $('.ratting-item').rating(function (vote, event) {
                var anchor = $(event.currentTarget),
                    pid = anchor.closest(".ratting-item").data("pid"),
                    url = '@Url.Action("RateProduct", "Ratings")';

                
                $('.ratting-item[data-pid=' + pid + ']')
                    .next()
                    .text("Placing your vote...");

                $.ajax({
                    url: url,
                    type: "GET",
                    data: { rate: vote, id: pid},
                    success: function (data) {

                        if (data.success) {
                            $('.ratting-item[data-pid=' + data.pid + ']')
                                .next()
                                .text("Rated! (New average rating: " + data.avgRating + ")");
                        }
                        else {
                            $('.ratting-item[data-pid=' + data.pid + ']')
                                .next()
                                .text("Something went wrong...");
                        }
                    },
                    error: function (err) {
                        $('.result').text(err);
                    },
                    complete: function () {
                    }
                });
            });

        });
    </script>
}

