<script>

    $('.notBtn').on('click', function () {
        var click = $(this).data('clicks');
        if (click) {

            $(".notBtn>.box").css({ "height": "0vh" });
            $('.box').css('border', '');
        } else {
            $('.box').css('border', '1px solid gray');
            $(".numberNotify").css({ "display": "none" });
            $(".notBtn>.box").css({ "height": "60vh" });
        };
        $(this).data('clicks', !click);

    });

    
