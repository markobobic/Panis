        .chat-window .temp-message {
            color: rgb(176, 176, 176);
        }

    .chat-window-title {
        background: none repeat scroll 0 0 #EEEEEE;
        color: #7E7E7E;
        cursor: pointer;
        overflow: hidden;
        padding: 6px;
    }

        .chat-window-title .text {
            margin-top: 1px;
